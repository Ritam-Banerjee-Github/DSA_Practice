class Solution {
    public int maxSatisfied(int[] customers, int[] grumpy, int minutes) {
        int n=customers.length;
        int totalSatisfied=0;
        
        int maxUnsatisfied=0;
        
        for(int i=0;i<n;i++){
            if(grumpy[i]==0) totalSatisfied+=customers[i];
        }
        
        int start=0;
        int end=0;
        int count=0;
        int unSatisfied=0;
        
        while(end<n){
            count++;
            if(grumpy[end]==1) unSatisfied+=customers[end];
            
            while(count>minutes){
                if(grumpy[start]==1) unSatisfied-=customers[start];
                start++;
                count--;
            }
            
            maxUnsatisfied=Math.max(maxUnsatisfied,unSatisfied);
            end++;
        }
        return totalSatisfied+maxUnsatisfied;
    }
}
