class Solution {
    public String addSpaces(String s, int[] spaces) {
        int n=spaces.length;
        StringBuilder ans=new StringBuilder(s);
        int count=0;

        for(int i=0;i<n;i++){
            int index=spaces[i];
            index=index+count;

            ans.insert(index,' '); //Adds space and moves remaining elements to right
            count++;
        }

        return ans.toString();
    }
}
