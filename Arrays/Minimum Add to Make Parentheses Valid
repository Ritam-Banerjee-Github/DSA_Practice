class Solution {
    public int minAddToMakeValid(String s) {
        Stack<Character> stack=new Stack<>();
        int n=s.length();
        
        for(int i=0;i<n;i++){
            if(!stack.isEmpty() && s.charAt(i)==')' && stack.peek()=='('){
                stack.pop();
                continue;
            }
            
            stack.push(s.charAt(i));
        }
        
        return stack.size();
    }
}
