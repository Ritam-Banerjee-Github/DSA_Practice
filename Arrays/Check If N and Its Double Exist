class Solution {
    public boolean checkIfExist(int[] arr) {
        Set<Integer> set=new HashSet<>();
        int n=arr.length;
        for(int i=0;i<n;i++){
            int num=arr[i];
            if(set.contains(num*2) || (num%2==0 && set.contains(num/2))) return true; //Odd-Even check is required or division will return floor value
            set.add(num);
        }

        return false;
    }
}
