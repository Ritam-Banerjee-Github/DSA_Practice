class Solution {
    public int chalkReplacer(int[] chalk, int k) {
        int n=chalk.length;
        
        while(true){
            for(int i=0;i<n;i++){
                if(k<=0 || k-chalk[i] <0){
                    return i;
                }
                
                k=k-chalk[i];
            }
        }
        
        
    }
}
