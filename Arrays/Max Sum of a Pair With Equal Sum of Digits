class Solution {
    public int maximumSum(int[] nums) {
        int n=nums.length;
        Map<Integer,Integer> map=new HashMap<>();
        int ans=-1;

        for(int i=0;i<n;i++){
            int num=nums[i];
            int temp=num;

            int sumOfDigits=0;

            while(temp>0){
                sumOfDigits+=temp%10;
                temp=temp/10;
            }

            if(map.containsKey(sumOfDigits)){
                ans=Math.max(ans,num+map.get(sumOfDigits));

                if(map.get(sumOfDigits)<num){
                    map.put(sumOfDigits,num);
                }
                
            }else{
                map.put(sumOfDigits,num);
            }

        }

        return ans;
    }
}
