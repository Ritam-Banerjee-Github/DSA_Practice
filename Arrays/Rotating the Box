TC - O(n*2m) + O(n*m)
class Solution {
    public char[][] rotateTheBox(char[][] box) {
        int n=box.length;
        int m=box[0].length;

        char[][] ans=new char[m][n];

        for(int i=0;i<n;i++){
            int count=0;
            for(int j=0;j<=m;j++){

                if(j==m){
                    int row=j-1;
                    while(count>0){
                        ans[row][n-i-1]='#';
                        row--;
                        count--;
                    }

                    break;

                }else if(box[i][j]=='*'){
                    ans[j][n-i-1]='*';
                    int row=j-1;
                    while(count>0){
                        ans[row][n-i-1]='#';
                        row--;
                        count--;
                    }

                }else if(box[i][j]=='#'){
                    count++;
                }

            }
        }

        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++){
                if(ans[i][j]=='\u0000') ans[i][j]='.';
            }
        }

        return ans;
    }
}
